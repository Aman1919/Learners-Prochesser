// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  firstname String
  lastname  String
  purchases Purchase[]
  createdAt DateTime  @default(now())
}

model Package {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  price       Float
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  purchases   Purchase[]
}

model Purchase {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  package     Package  @relation(fields: [packageId], references: [id])
  packageId   Int
  paymentId   String   @unique // Instasend Payment ID
  createdAt   DateTime @default(now())
}
