// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  firstname String
  lastname  String
  purchases Purchase[]
  createdAt DateTime   @default(now())
}

model Package {
  id          String     @id @default(cuid())
  name        String
  description String
  price       Float
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  purchases   Purchase[]
}

model Purchase {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  package   Package  @relation(fields: [packageId], references: [id])
  packageId String
  paymentId String   @unique // Instasend Payment ID
  createdAt DateTime @default(now())
}
